/* components/loading.wxss */
.bg-universe {
  background-image: url(https://marx-1257249827.cos.ap-guangzhou.myqcloud.com/images/bg-universe.png);
}
.loading {
  z-index: 999;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.block {
  position: relative;
  top: -100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.mars {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  width: 280rpx;
  height: 280rpx;
}
.loading-circle {
  position: absolute;
  top: 28rpx;
  left: 24rpx;
  width: 232rpx;
  height: 231rpx;
}
.loading-mars {
  width: 200rpx;
  height: 200rpx;
}
.loading-title {
  width: 320rpx;
  height: 31rpx;
  margin-top: 30rpx;
}
