/**index.wxss**/
.page {
  z-index: 1;
  position: relative;
  box-sizing: border-box;

  display: flex;
  flex-direction: column;
  align-items: center;

  width: 100vw;
  height: 100vh;
  min-height: 1334rpx;
  padding-top: 66rpx;
  padding-bottom: 35rpx;
}
.bg-index {
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.img-header {
  width: 750rpx;
  height: 400rpx;
  margin-left: 15rpx;
}
.img-btn {
  width: 450rpx;
  margin-top: auto;
  margin-bottom: 48rpx;
}
.img-tx-skps {
  width: 186rpx;
  height: 39rpx;
}
.img-universe {
  z-index: 0;
  position: relative;
  top: 60rpx;
  width: 800rpx;
}

.ani-rotate {
  animation: rotate 30s infinite linear;
}
