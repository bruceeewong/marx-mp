.page {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;

  width: 100vw;
  min-height: 100vh;
  padding-top: 105rpx;
  padding-bottom: 240rpx;
}

.section-1 {
  z-index: 1;
  width: 630rpx;
  margin: 0 auto;
}

.section-2 {
  z-index: 1;
  width: 100vw;
  margin: 0 auto;
  margin-top: 105rpx;
}

.img-step-title {
  margin-bottom: 25rpx;
}

.step-1 {
  width: 273rpx;
  height: 85rpx;
}

.step-2 {
  width: 321rpx;
  height: 85rpx;
  margin: 0 60rpx;
}

.mx-input {
  display: flex;
  width: 620rpx;
  height: 75rpx;
}

.mx-input + .mx-input {
  margin-top: 2rpx;
}

.mx-input__label {
  display: flex;
  justify-content: space-between;
  align-items: center;

  box-sizing: border-box;
  width: 200rpx;
  height: 100%;
  padding: 22rpx 32rpx;

  font-size: 32rpx;
  background-color: #1a0a08;
}

.mx-input__control {
  display: flex;
  justify-content: center;
  align-items: center;

  box-sizing: border-box;
  width: 430rpx;
  height: 100%;
  padding: 0 42rpx;
  margin-left: 2rpx;

  font-size: 32rpx;
  background-color: #33120c;
  color: #fff;
}

.picker-view {
  display: flex;
  align-items: center;
  width: 338rpx;
}

.placeholder {
  height: 160rpx;
  margin: 40rpx 0;
  background-color: #33120c;
}

.img-btn {
  z-index: 1;
  position: absolute;
  bottom: 86rpx;
}

.area-intro {
  margin: 0 60rpx;
  font-size: 28rpx;
}

.opacity {
  display: none;
  transition: all 0.5s ease-in;
  opacity: 0.5;
}

.opacity--active {
  display: block;
  opacity: 1;
}

.absolute-bottom {
  z-index: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 525rpx;
  overflow: hidden;
}

.mars-terran {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transition: opacity 0.25s linear;
  opacity: 0;
}

.mars-terran--active {
  opacity: 1;
  transition: opacity 0.25s linear;
}

/**轮播代码 START*/
.card-swiper {
  position: relative;
  height: 260rpx;
  margin-top: 40rpx;
}

.card-swiper swiper-item {
  box-sizing: border-box;
  left: 215rpx;
  width: 320rpx !important;
  height: 160rpx !important;
}

.card-swiper swiper-item .swiper-item {
  width: 320rpx;
  display: block;
  height: 160rpx;
  border-radius: 10rpx;
  transform: scale(0.9);
  opacity: 0.4;
  transition: all 0.2s ease-in 0s;
  overflow: hidden;
}

.card-swiper swiper-item .swiper-item image {
  display: block;
  width: 320rpx;
  height: 160rpx;
}

.card-swiper swiper-item.cur .swiper-item {
  transform: scale(1);
  opacity: 1;
  transition: all 0.2s ease-in 0s;
}

swiper[class*="-dot"] .wx-swiper-dots {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: absolute;
  top: 176rpx;
}

swiper.square-dot .wx-swiper-dot {
  opacity: 0.4;
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin: 0 8rpx !important;
}

swiper.square-dot .wx-swiper-dot.wx-swiper-dot-active {
  opacity: 1;
  width: 30rpx;
}

/**轮播代码 END*/
